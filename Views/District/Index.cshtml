@model IEnumerable<OceanTechLevel1.Models.District>

@{
    ViewData["Title"] = "Danh Sách Huyện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Danh Sách Huyện</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/District/Create" class="btn btn-info">Thêm mới Huyện</a>

        @using (Html.BeginForm("Index", "District", FormMethod.Get))
        {
            <div class="input-group" style="width: 300px;">
                <input type="text" name="searchTerm" placeholder="Tìm kiếm..." class="form-control" value="@Context.Request.Query["searchTerm"].FirstOrDefault()" />
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </div>
        }
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên Huyện</th>
                <th>Tỉnh</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var district in Model)
            {
                <tr>
                    <td>@district.DistrictId</td>
                    <td>@district.DistrictName</td>
                    <td>@district.Province.ProvinceName</td>
                    <td>
                        <a href="/District/Edit/@district.DistrictId" class="btn btn-warning btn-sm">Sửa</a>

                        <!-- Form xóa -->
                        <form action="/District/Delete/@district.DistrictId" method="post" style="display:inline;" onsubmit="return confirmDelete();">
                            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="4">
                    @{
                        int PrevPage = ViewBag.Page - 1;
                        if (PrevPage <= 0)
                        {
                            PrevPage = 1;
                        }
                        int NextPage = ViewBag.Page + 1;
                        if (NextPage > ViewBag.NoOfPages)
                        {
                            NextPage = ViewBag.NoOfPages;
                        }

                    }
                    <ul class="pagination justify-content-center">

                        <li class="page-item ">
                            <a class="page-link" href="/District/index?page=@PrevPage">
                                Prev
                            </a>
                        </li>
                        @for (int i = 0; i < ViewBag.NoOfPages; i++)
                        {
                            if (i + 1 == ViewBag.Page)
                            {
                                <li class="page-item active">
                                    <a class="page-link" href="/District/index?page=@(i+1)">
                                        @(i + 1)
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item ">
                                    <a class="page-link" href="/District/index?page=@(i+1)">
                                        @(i + 1)
                                    </a>
                                </li>
                            }

                        }
                        <li class="page-item active">
                            <a class="page-link" href="/District/index?page=@NextPage">
                                Next
                            </a>
                        </li>
                    </ul>
                </td>

            </tr>
        </tbody>
    </table>
</div>

<script>
    function confirmDelete() {
        return confirm('Bạn có chắc chắn muốn xóa huyện này cùng với các xã và nhân viên liên quan?');
    }
</script>

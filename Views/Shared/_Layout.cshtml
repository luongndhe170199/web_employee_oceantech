<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - My Application</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <!-- Link đến file CSS riêng -->
    <link href="/css/style.css" rel="stylesheet" />
   
</head>
<body>
    <header class="bg-light">
        <div class="container-fluid">
            <!-- Thêm một div để bọc phần nav-tabs và kiểm soát chiều rộng -->
            <nav class="nav-tabs-container">
                <nav class="nav nav-tabs" id="myTab" role="tablist">
                    <a class="nav-link" href="@Url.Action("ListOfEmployee", "Employee")" id="employee-tab">Quản lý Employee</a>
                    <a class="nav-link" href="/Province/index" id="province-tab">Danh mục Tỉnh</a>
                    <a class="nav-link" href="/District/index" id="district-tab">Danh mục Huyện</a>
                    <a class="nav-link" href="/Commune/index" id="commune-tab">Danh mục Xã</a>
                </nav>
            </nav>
        </div>
    </header>

    <main role="main">
        <div class="form-container">
            @RenderBody()
        </div>
    </main>

    <footer class="mt-4 text-center">
        <p>&copy; 2024 - Ocean Tech Level I</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            var currentUrl = window.location.href;
            $('.nav-link').each(function () {
                if (this.href === currentUrl) {
                    $(this).addClass('active');
                } else {
                    $(this).removeClass('active');
                }
            });
        });
    </script>
</body>
</html>
